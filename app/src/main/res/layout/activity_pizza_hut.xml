                        android:fontFamily="@font/work_sans_semibold"
                        android:text="Pan Pizza Personal Doble"
                        android:textColor="#CF5F05"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/lbl_panPizzaPersonalDobleDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/work_sans_medium"
                        android:text="Disfruta este excelente combo de 2 combos de pizza personales, 2 papas wedges, 2 bebidas medianas."
                        android:textColor="#261111"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/lbl_panPizzaPersonalDoblePrecio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
