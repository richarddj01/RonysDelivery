                android:layout_height="23dp" />

            <ImageView
                android:id="@+id/img_portadakfc"
                android:layout_width="match_parent"
                android:layout_height="197dp"
                app:srcCompat="@mipmap/portadapizza" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="12dp" />

            <LinearLayout
