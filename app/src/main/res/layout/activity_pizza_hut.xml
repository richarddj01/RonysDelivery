                        android:fontFamily="@font/work_sans_semibold"
                        android:text="L.199"
                        android:textColor="#CF5F05"
                        android:textSize="18dp" />
                </LinearLayout>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_weight="0.5" />

            <LinearLayout
